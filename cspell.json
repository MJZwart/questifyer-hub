// Cspell; https://cspell.org/
{
    "version": "0.2",
    "language": "en-gb",
    // If the scope of spelling checking changes; this is how to add a custom dictionary:
    // Remove the ""minWordLength": 99999999," first, of cource.
    // Words in ./project-words.txt are generated by using "npm run cspell --words-only --unique "**/*.md" | sort --ignore-case >> project-words.txt".
    // This does however add current spelling mistakes, so fix them first. Check https://cspell.org/docs/getting-started/ for more info.
    // Use "npm run cspell trace "$word" " to test if $word exists in a installed dictionary.
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": "./project-words.txt",
            "addWords": true
        }
    ],
    "import": [
        "./node_modules/@cspell/dict-npm/cspell-ext.json"
    ],
    "dictionaries": [
        "npm",
        "node",
        "php",
        "vue",
        "typescript",
        "en-common-misspellings",
        "project-words"
    ],
    "flagWords": [
    ],
    "ignoreWords": [
        // incorrect forbidden words
    ],
    "ignorePaths": [
        "**.log",
        "**.bin",
        "**.out",
        // Will be the list of extra correct words
        "project-words.txt",
    ],
    "reporters": [["@cspell/cspell-json-reporter", { "outFile": "out.json" }]],
    "ignoreRegExpList": []
}
